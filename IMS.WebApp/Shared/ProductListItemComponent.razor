@foreach(var item in productList)
{
    <tr>
        <td>@item.ProductName</td>
        <td>@item.Quantity</td>
        <td>@item.Price.ToString("c")</td>
        <td>
            <button type="button" class="btn-light">Edit</button>
        </td>
    </tr>
}

@code {
    [Parameter]
    public List<Product> productList { get; set; } = new List<Product>();
}
